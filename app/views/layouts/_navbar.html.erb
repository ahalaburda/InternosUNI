<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="header">
                <%= image_tag("logoUni.png", :alt => "logo") %>
                <a class="navbar-brand" href="/">Universidad Nacional de Itap√∫a</a>
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <% if usuario_signed_in? %>
            <ul class="nav navbar-nav">
                <li><a href="/funcionarios">Funcionarios</a></li>
                <li><a href="/departamentos">Departamentos</a></li>
                <li><a href="/empresas">Empresas</a></li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Bienvenido <%= current_usuario.nombre %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to usuarios_path do %>
                              <i class="glyphicon glyphicon-user"> Usuarios</i>
                            <% end %>
                        </li>
                        <li class="divider"></li>
                        <li><%= link_to destroy_usuario_session_path, method: :delete do %>
                              <i class="glyphicon glyphicon-off"> Cerrar sesion</i>
                            <% end %>
                        </li>
                    </ul>
                </li>
            </ul>  
            <% end %>
            <div class="navbar-form navbar-right" role="form">
                <%= form_tag funcionarios_path, method: "get" do %>
                    <div class="form-group">
                        <div id="the-basics">
                            <%= text_field_tag :value, nil, :class => 'form-control typeahead', :placeholder => 'Buscar', id: 'autocomplete', :autofocus => true %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>