    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :cargo %><br />
    <%= f.text_field :cargo %>
  </div>

    <div class="field">
     <%= f.label :departamento_id %>
  
        </br>
        <%= f.collection_select :departamento_id, Departamento.all, :id, :name_with_initial, {prompt: "Seleccione un departamento"}, {class: "form-control"}%>
      </div>

  <div class="field">
    <%= f.label :correo %><br />
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <%= f.label :cumpleanio %><br />
    <%= f.date_select :cumpleanio,:start_year => 1920 %>
