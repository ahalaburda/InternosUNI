<%= render 'layouts/navigation' %>
<div class="container">
    <span id="ir-arriba" class="hidden">
      <a href="#top" class="btn btn-circle btn-lg btn-primary"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
        <i class="glyphicon glyphicon-chevron-up"></i>
      </a>
    </span>
    <h1> Departamentos 
        <button type="button" class="btn btn-print btn-outline btn-circle" id="btn1">
            <span class="glyphicon glyphicon-plus" id="gbtn1"></span>
        </button>
    </h1>
    <div id="flash">
      <% flash.each do |type, message| %>
        <div class="alert <%= bootstrap_class_for(type) %> fade in">
          <button class="close" data-dismiss="alert">Ã—</button>
          <%= message %>
        </div>
      <% end %>
    </div>
    <div id="form-funcionarios">
        <%= render 'formulario' %>
    </div><br>
  <table class="table table-hover">
    <tr class="active">  
      <th>Nombre</th>
      <th>ID</th>
      <th>Interno</th>
      <th>Acciones</th>
    </tr>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nombre %></td>
        <td><%= departamento.id %></td>
        <td><%= departamento.interno %></td>
        <td>
            <%= link_to edit_departamento_path(departamento), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', remote: true,'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to departamento, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
                  <span class="glyphicon glyphicon-remove"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<br />