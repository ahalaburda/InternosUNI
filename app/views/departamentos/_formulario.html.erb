<%= simple_form_for @departamento, :validate => true do |f| %>
<div class="row">
	<div class="col-md-4">
		<div class="field">
			<%= f.input :nombre, :input_html => {class: "form-control"} %>
			<%= f.input :interno, :input_html => {class: "form-control"}  %>
		</div>
	</div>
</div>
	</br>
	<div class="col-md-offset-11">
		<div class="actions">
			<% if controller.action_name == 'new' or controller.action_name == 'index' %>
				<%= f.submit "Agregar", :class => 'mui-btn mui-btn-primary mui-btn-raised'%>
			<% elsif controller.action_name == 'edit' %>
				<%= f.submit "Actualizar", :class => 'btn btn-primary'%>
			<% end %>
		</div>
	</div>
<% end %>